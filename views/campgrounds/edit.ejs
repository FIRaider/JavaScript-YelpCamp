<% layout ('layouts/boilerplate') -%>
<div class="row">
    <h1 class="text-center">Edit <%=campground.title%></h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class='form-label' for="title">Title</label>
                <input class='form-control' type="text" id='title' name='title' value="<%=campground.title%>" required>
            </div>
            <div class="mb-3">
                <label class='form-label' for="location">Location</label>
                <input class='form-control' type="text" name="location" id="location" value="<%=campground.location%>"
                    required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="price" name="price">$</span>
                    </div>
                    <input type="text" class="form-control" value="<%=campground.price%>" aria-label="price"
                        aria-describedby="price" name="price">
                </div>
            </div>
            <div class="mb-3">
                <label class='form-label' for="image">image Url</label>
                <input class='form-control' type="text" name="image" value="<%=campground.image%>" id="image">
            </div>
            <div class="mb-3">
                <label class='form-label' for="discription">Description</label>
                <textarea class='form-control' type="text" name="description"
                    id="description"><%=campground.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
            <div class="" mb-3"">
                <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
            </div>
        </form>
    </div>
</div>